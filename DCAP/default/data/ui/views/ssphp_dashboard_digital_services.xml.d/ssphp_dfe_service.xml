            <set token="tkn_current_service">$result.ssphp.service.name$</set>
            <set token="tkn_color">$result.service_compliant_color$</set>
            <set token="tkn_score_abs">$result.service_compliant_abs$</set>
            <set token="tkn_score_perc">$result.service_compliant_perc$</set>
