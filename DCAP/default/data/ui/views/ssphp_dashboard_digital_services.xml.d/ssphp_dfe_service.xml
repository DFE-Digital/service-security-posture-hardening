        <search base="bs_1">
          <query>

| search ssphp.score.ciso_priority=1
        
| stats values(ssphp.service.name) as ssphp.service.name, count as ssphp.score.denominator, sum(eval(if('ssphp.score.score'="100",1,0))) as ssphp.score.numerator

`ssphp_metrics_eval_field_colors{{environment}}`

| eval service_compliant_perc=floor('ssphp.score.numerator'*100/'ssphp.score.denominator'),
        service_compliant_abs='ssphp.score.numerator'." of ". 'ssphp.score.denominator',
