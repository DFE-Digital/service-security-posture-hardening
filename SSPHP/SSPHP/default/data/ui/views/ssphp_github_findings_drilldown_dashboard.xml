<dashboard theme="dark" version="1.1">
  <label>Github Findings Drilldown Dashboard</label>

  <row>
    <panel>
      <html>
        <a href="https://docs.github.com/webhooks-and-events/webhooks/webhook-events-and-payloads#dependabot_alert" target="blank">Definitions of Github Webhooks</a>
      </html>
    </panel>
  </row>

  <row>
    <panel>
      <title>Finding Details</title>
      <event>
        <search>
          <query>
(`github_data_source`) OR (index="github_test" sourcetype="github_json")

| sort 0 - _time
| eval event_time=_time,
     ssphp_original_event=md5(event_time._raw)

| eval ssphp_original_event_target=$tkn_original_event|s$
| where 'ssphp_original_event_target' like "%".'ssphp_original_event'."%"
| fields - ssphp_original_event_target
          </query>
          <earliest>0</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="list.drilldown">none</option>
        <option name="list.wrap">1</option>
        <option name="maxLines">5</option>
        <option name="raw.drilldown">full</option>
        <option name="rowNumbers">0</option>
        <option name="table.drilldown">all</option>
        <option name="table.sortDirection">asc</option>
        <option name="table.wrap">1</option>
        <option name="type">list</option>
      </event>
    </panel>
  </row>
</dashboard>